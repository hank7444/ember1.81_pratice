<a class='dropdown-toggle' data-toggle='dropdown' href="#">
    <img width="23" height="23" {{bind-attr alt="menu.user.name" src="menu.user.photo"}} />
    <span class='user-name'>{{menu.user.name}}</span>
    <b class='caret'></b>
</a>

<ul class='dropdown-menu'>
    {{#each menu.pages}}
        <li>
            <a {{bind-attr id="url"}}>
                <i {{bind-attr class="icon"}}></i>
                {{title}}
            </a>
        </li>
    {{/each}}
    <li class='divider'></li>
    <li>
        <a {{bind-attr id="menu.signout.url"}}>
            <i {{bind-attr class="menu.signout.icon"}}></i>
            {{menu.signout.title}}
        </a>
    </li>
</ul>